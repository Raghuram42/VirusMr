    <section  style="background: url(https://wallpaperbrowse.com/media/images/cool-background.jpg) no-repeat center center fixed; ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Suspicious File Detection Results</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
 
<div class="col-md-4 col-md-offset-4">
<% if !@detect.errors.empty? %>
  <div class="alert alert-error">
    <ul>
      <% @detect.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="input-group ">
  <%= form_for @detect do |f| %>
   <!-- <%= f.label :attachment , class: "form-control "%> -->
    <%= f.file_field :attachment, class: "form-control" %>
    <%= f.submit "Scan", class: "btn btn-primary form-control" %>
  <% end %>
</div>
</div>
</div>

            </div>
    </section>
