 <section id="contact" style="background: url(https://thumbs.dreamstime.com/x/background-illustration-computer-virus-25296282.jpg) no-repeat center center fixed; ">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Suspicious File Detection</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <% if @r != nil %> 
            <div class="row">
                
                <div class="col-md-7 col-md-offset-2">
                
          <div class="table-responsive">    
            <table class="table" >
              <thead class="thead-inverse">
                <tr>
                  <th>#</th>
                  <th> Scanner</th>
                  <th> Version</th>
                  <th> Detected</th>
                  <th>Result</th>
                  <th> Scan Date</th>
                  
                </tr>
              </thead>
              <tbody>
              <% @i = 0 %> 
             <% @r.each do | key| %>
                  <!--#@r[@i]['vtresult']['scanner'] --> 
                <tr>
                  <th scope="row"><%= @i+1 %></th>
                <td><%= @r[@i]['vtresult']['scanner'] %></td>
                <td><%= @r[@i]['vtresult']['version'] %></td>
                <td><%= @r[@i]['vtresult']['detected'] %></td>
                <td><%= @r[@i]['vtresult']['result'] %></td>
                <td><%= @r[@i]['vtresult']['scan_date'] %></td></tr>
                 
               <%  @i = @i + 1  %>
  <% end%>

                
                 </tbody>
            </table>
          
          </div>
          </div>
          
                   
            </div>
            <% else %>
               <h1 class="text-center">No file Uploaded!</h1>
            <%end%>
    </section>
   